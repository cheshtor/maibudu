    <select id="findByUidAndBookId" parameterType="map" resultMap="BaseResultMap">
        <!--@mbg.generated-->
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            shelf_book
        WHERE
            `uid` = #{uid}
            AND
            book_id = #{bookId}
            AND
            `sys_status` = 0
    </select>

    <update id="removeBook">
        UPDATE
            shelf_book
        SET
            sys_status = 1
        WHERE
            `uid` = #{uid}
            AND
            `book_id` = #{bookId}
    </update>

    <select id="countBook" resultType="java.lang.Long">
        SELECT
            count(DISTINCT(book_id))
        FROM
            shelf_book
        WHERE
                uid IN (
                SELECT
                    DISTINCT(exporter_id)
                FROM
                    share_shelf
                WHERE
                    importer_id = #{uid}
            )
           OR uid = #{uid}
    </select>

    <insert id="insert" parameterType="com.mabushizai.maibudu.domain.ShelfBook">
        <!--@mbg.generated-->
        insert into shelf_book (`uid`, book_id, create_date, sys_status)
        values (#{uid}, #{bookId}, #{createDate}, #{sysStatus})
    </insert>
