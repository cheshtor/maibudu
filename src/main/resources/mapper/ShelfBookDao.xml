<mapper namespace="com.mabushizai.maibudu.dao.ShelfBookDao">
    <resultMap id="BaseResultMap" type="com.mabushizai.maibudu.domain.ShelfBook">
        <!--@mbg.generated-->
        <!--@Table shelf_book-->
        <id column="uid" property="uid"/>
        <id column="book_id" property="bookId"/>
        <result column="create_date" property="createDate"/>
        <result column="sys_status" property="sysStatus"/>
    </resultMap>

    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        `uid`, book_id, create_date, sys_status
    </sql>

    <select id="searchBook" resultMap="com.mabushizai.maibudu.dao.BookDao.BaseResultMap">
        SELECT
            b.`id`,
            b.`uid`,
            b.`title`,
            b.subtitle,
            b.author,
            b.publish_date,
            b.publisher,
            b.isbn,
            b.summary,
            b.pages,
            b.price,
            b.binding,
            b.cover
        FROM
            book AS b,
            shelf_book AS sb,
            share_shelf AS ss
        WHERE
            b.id = sb.book_id
          AND ss.importer_id = #{uid}
          AND (
                sb.uid = ss.exporter_id
                OR
                sb.uid = #{uid}
            )
          AND b.sys_status = 0
          AND sb.sys_status = 0
          <if test="title != null and title != ''">
            AND b.title LIKE CONCAT('%', #{title}, '%')
          </if>
        ORDER BY
            b.uid DESC


