.container {
    margin-top: 96rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #2f2d51;
}

.title {
    margin-top: 48rpx;
    font-size: 36rpx;
    text-align: center;
    width: 80%;
}

.subtitle {
    width: 80%;
    text-align: center;
    margin-top: 24rpx;
    font-size: 24rpx;
}

.info {
    width: 80%;
    min-height: 48rpx;
    margin-top: 48rpx;
    background-color: #fff;
    border-radius: 32rpx;
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    line-height: 48rpx;
    padding: 24rpx 24rpx;
}

.center {
    text-align: center;
}