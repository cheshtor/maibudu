<view>
    <view class="container">
        <view class="header">
            <text>方寸之间</text>
            <text>每一本书都值得被看见</text>
        </view>
        
        <view class="scan">
            <van-button 
                bind:click="scanBook"
                color="#93d8f8" 
                custom-style="color:#2f2d51;font-weight:bold;" 
                icon="scan"
                round="true">添加书籍</van-button>
        </view>
    </view>

    <view class="title">
        <text>我的书架</text>
    </view>
    <view class="count" bindtap="goBookshelf">
        <text class="number">50</text>
        <text>读过的书 走过的路</text>
    </view>

    <view class="title" bindtap="goShare">
        <text>共享书架</text>
    </view>
    <view class="share">
        <m-search bindonSearch="importShare" placeholder="书架共享码" text="导入" left-icon="share-o"></m-search>
        <view class="code">
            <text>我的共享码：GXSDFLSA</text>
        </view>
    </view>
</view>