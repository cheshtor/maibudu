.container {
    display: flex;
    flex-direction: column;
    align-items: baseline;
    margin-top: 72rpx;
}

.header {
    display: flex;
    flex-direction: column;
    font-size: 48rpx;
    font-weight: bold;
    color: #2f2d51;
    padding-left: 60rpx;
    margin-top: 48rpx;
}

.scan {
    width: 100%;
    text-align: center;
    margin-top: 96rpx;
}

.title {
    width: 85%;
    margin: 0rpx auto;
    margin-top: 96rpx;
    margin-bottom: 16rpx;
    font-weight: bold;
    font-size: 32rpx;
    color: #2f2d51;
    padding-left: 16rpx;
}

.count {
    width: 85%;
    height: 200rpx;
    margin: 0rpx auto;
    background-color: #fff;
    border: 1px solid #fff;
    border-radius: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 36rpx;
    font-weight: bold;
    color: #2f2d51;
    padding-top: 24rpx;
}

.count > .number {
    font-size: 60rpx;
    margin-bottom: 24rpx;
}

.share {
    width: 85%;
    margin: 0rpx auto;
    /* margin-top: 48rpx; */
    display: flex;
    flex-direction: column;
}

.share > .input {
    width: 100%;
}

.share > .code {
    margin-top: 16rpx;
    text-align: center;
    font-size: 24rpx;
    color: #2f2d51;
}
