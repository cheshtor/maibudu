.outer {
    width: 100%;
    margin-bottom: 32rpx;
}

.van-swipe-cell {
    height: 150rpx;
    background: #fff;
    border-radius: 32rpx;
}

.van-swipe-cell__right {
    background: #ff97b5;
    border-top-right-radius: 32rpx;
    border-bottom-right-radius: 32rpx;
    width: 150rpx;
    line-height: 150rpx;
    text-align: center;
    color: white;
    font-weight: bold;
    font-size: 36rpx;
}

.main {
    width: 100%;
    line-height: 150rpx;
    padding-left: 48rpx;
    display: flex;
    flex-direction: row;
    
}

.name {
    font-size: 32rpx;
    color: #2f2d51;
    font-weight: bold;
    padding-left: 32rpx;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    margin-top: 25rpx;
}